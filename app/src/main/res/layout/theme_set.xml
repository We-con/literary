<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/theme_set"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/edit_content"
    android:layout_margin="2dp"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/theme_0"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="22dp"
        android:alpha="0.4"
        android:src="@drawable/ic_remind_happy" />

    <ImageView
        android:id="@+id/theme_1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="22dp"
        android:alpha="0.4"
        android:src="@drawable/ic_remind_love" />

    <ImageView
        android:id="@+id/theme_2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="22dp"
        android:alpha="0.4"
        android:src="@drawable/ic_remind_sad" />

    <ImageView
        android:id="@+id/theme_3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="22dp"
        android:alpha="0.4"
        android:src="@drawable/ic_remind_knowledge" />

    <ImageView
        android:id="@+id/theme_4"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:alpha="0.4"
        android:src="@drawable/ic_blue" />

</RadioGroup>